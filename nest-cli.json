{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./uploads/**/*",
        "outDir": "dist/uploads"
      },
      {
        "include": "./audios/**/*",
        "outDir": "dist/audios"
      }
    ],
    "watchAssets": true
  }
}
